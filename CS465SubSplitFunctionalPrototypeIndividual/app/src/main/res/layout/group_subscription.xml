<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupSubscription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="#aaaaaa">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Members"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textSize="20dp"
                android:paddingLeft="5dp"/>
<!--            <EditText-->
<!--                android:id="@+id/add_members_text"-->
<!--                android:layout_width="280dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:paddingLeft="10dp"-->
<!--                android:layout_margin="5dp"-->
<!--                android:maxLength="30"-->
<!--                android:hint="Add other user"-->
<!--                android:gravity="center | left"-->
<!--                android:background="@drawable/border"-->
<!--                android:layout_gravity="top"/>-->

            <Button
                android:id="@+id/add_members_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="Add"
                android:textSize="10dp"
                android:textStyle="bold"
                android:backgroundTint="#ec796c"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:id="@+id/added_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:columnCount="2">

                    <Button
                        android:id="@+id/added_user_display_0"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="5dp"
                        android:text="User A"
                        android:drawableRight="@drawable/abc_vector_test"
                        android:drawableLeft="@drawable/account_icon"/>

                    <Button
                        android:id="@+id/added_user_display_1"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_margin="5dp"
                        android:text="User B"
                        android:drawableRight="@drawable/abc_vector_test"
                        android:drawableLeft="@drawable/account_icon"/>

                    <Button
                        android:id="@+id/added_user_display_2"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_margin="5dp"
                        android:text="User c"
                        android:drawableRight="@drawable/abc_vector_test"
                        android:drawableLeft="@drawable/account_icon" />

                    <Button
                        android:id="@+id/added_user_display_3"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_margin="5dp"
                        android:text="User D"
                        android:drawableRight="@drawable/abc_vector_test"
                        android:drawableLeft="@drawable/account_icon"/>

                    <Button
                        android:id="@+id/added_user_display_4"
                        android:layout_height="wrap_content"
                        android:layout_width="180dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_margin="5dp"
                        android:text="User E"
                        android:drawableRight="@drawable/abc_vector_test"
                        android:drawableLeft="@drawable/account_icon"/>
                </GridLayout>

            </LinearLayout>


        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="#aaaaaa">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spliting Options"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textSize="20dp"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="45dp"
                android:text="Customized"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:paddingTop="10dp"
                android:textSize="15dp"
                android:paddingLeft="5dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/drop_down_icon"
                android:backgroundTint="#aaaaaa"
                android:textSize="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evenly (default)"
                    android:paddingTop="10dp"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"
                    android:padding="5dp"/>

<!--                <ImageView-->
<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:paddingRight="10dp"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:src="@drawable/drop_down_icon"/>-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/border">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customized"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:paddingLeft="20dp"
                        android:padding="5dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:paddingRight="10dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/drop_down_icon"/>
                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:paddingTop="3dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_border">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User A"
                                android:textSize="20dp"
                                android:paddingLeft="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingRight="10dp"
                                android:textSize="20dp"
                                android:text="$ 3.00"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:paddingTop="3dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_border">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User B"
                                android:textSize="20dp"
                                android:paddingLeft="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingRight="10dp"
                                android:textSize="20dp"
                                android:text="$ 5.00"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:paddingTop="3dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_border">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User C"
                                android:textSize="20dp"
                                android:paddingLeft="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingRight="10dp"
                                android:textSize="20dp"
                                android:text="$ 1.00"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:paddingTop="3dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_border">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User E"
                                android:textSize="20dp"
                                android:paddingLeft="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingRight="10dp"
                                android:textSize="20dp"
                                android:text="$ 0.00"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount Left"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 0.00"
                        android:textSize="15dp"
                        android:gravity="left"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:backgroundTint="#ec796c"
                android:text="Save"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>